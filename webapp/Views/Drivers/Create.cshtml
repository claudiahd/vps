@model VPS.Models.DTOs.MyDriver

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content" class="container">

    <div class="row">
        <div class="well no-padding">
            <form action="@Url.Action("Create", "Drivers")" method="POST" id="myForm" name="myForm" class="smart-form client-form">

                @Html.AntiForgeryToken()

                <header>
                    Add New Driver
                </header>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-xs-12">

                    <fieldset>
                        <section>
                            @Html.LabelFor(model => model.GivenName, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="GivenName" value="" required="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Given Name</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.MiddleName, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="MiddleName" value="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Middle Name</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.SurName, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="SurName" value="" required="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Sur Name</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <i class="icon-append fa fa-calendar"></i>
                                <input type="text" name="DateOfBirth" id="DateOfBirth" required="">
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.EmailAddress, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <i class="icon-append fa fa-envelope"></i>
                                <input type="text" name="EmailAddress">
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.LicenceNo, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="LicenceNo" value="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-id-card-o txt-color-teal"></i> Please enter Licence No</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.MobileNo, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="MobileNo" value="" required="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Contact Number</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="Address" value="" required="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Address</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.Suburb, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="Suburb" value="" required="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Suburb</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="State" value="" required="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter State</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.Postcode, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="Postcode" value="" required="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Postcode</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.UberID, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="UberID" value="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Uber ID</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.UberIDPassword, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="UberIDPassword" value="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Uber ID password</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.EmergencyContactName, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="EmergencyContactName" value="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Emergency Contact Name</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.EmergencyContactRelation, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="EmergencyContactRelation" value="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Emergency Contact Relation</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.EmergencyContactMobileNo, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="EmergencyContactNumber" value="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Emergency Contact Number</b>
                            </label>
                        </section>
                        <section>
                            @Html.LabelFor(model => model.EmergencyContactAddress, htmlAttributes: new { @class = "label" })
                            <label class="input">
                                <input type="text" name="EmergencyContactAddress" value="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Emergency Contact Address</b>
                            </label>
                        </section>

                        <footer>

                            <i>
                                @Html.ActionLink(" Back to List", "Index", null, new { @class = "fa fa-backward" })
                            </i>

                            <button type="submit" class="btn btn-primary">
                                Add
                            </button>

                        </footer>

                    </fieldset>
                </div>
            </form>
        </div>

    </div>
</div>

@section pagespecific{
    <script type="text/javascript">

        // START AND FINISH DATE
        $('#DateOfBirth').datepicker({
            dateFormat: 'dd/mm/yy',
            prevText: '<i class="fa fa-chevron-left"></i>',
            nextText: '<i class="fa fa-chevron-right"></i>'
        });
    </script>
}