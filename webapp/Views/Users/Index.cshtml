@model IEnumerable<VPS.Models.MyUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("  Add New", "Create", null, new { @class = "btn btn-primary fa fa-plus-circle" })

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.UserType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.UserType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.ActionLink(" Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-primary btn-xs fa fa-edit" }) |
            @Html.ActionLink(" Details", "Details", new { id = item.UserID }, new { @class = "btn btn-primary btn-xs fa fa-info-circle" }) |
            @Html.ActionLink(" Delete", "Delete", new { id = item.UserID }, new { @class = "btn btn-primary btn-xs fa fa-times" })
        </td>
    </tr>
}

</table>
