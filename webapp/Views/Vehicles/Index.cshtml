@model IEnumerable<VPS.Models.DTOs.VehicleDto>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <!-- MAIN CONTENT -->

    <div id="content">
        <section id="widget-grid" class="">
            @Html.AntiForgeryToken()
            <!-- row -->
            <div class="row">

                <!-- NEW WIDGET START -->
                <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                    <!-- Table Start-->
                    <!-- Widget ID (each widget will need unique ID)-->
                    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                        <header>
                            <h2>Vehicles </h2>
                        </header>

                        <!-- widget div-->
                        <div>

                            <!-- widget edit box -->
                            <div class="jarviswidget-editbox">
                                <!-- This area used as dropdown edit box -->

                            </div>
                            <!-- end widget edit box -->
                            <!-- widget content -->
                            <div class="widget-body no-padding">
                                <table id="dt_allPossessions" class="table table-striped table-bordered table-hover" style="width:100%;">
                                    <thead>
                                        <tr>
                                            @*<th data-class="expand">ID</th>*@
                                            <th data-class="expand"><i class="fa fa-fw fa-taxi text-muted hidden-md hidden-sm hidden-xs"></i> Rego</th>
                                            <th data-class="expand"><i class="fa fa-fw fa-calendar text-muted hidden-md hidden-sm hidden-xs"></i> Rego Expiry Date</th>
                                            <th data-class="expand"><i class="fa fa-fw fa-car text-muted hidden-md hidden-sm hidden-xs"></i> Make</th>
                                            <th data-class="expand"><i class="fa fa-fw fa-car txt-color-blue hidden-md hidden-sm hidden-xs"></i> Model</th>
                                            <th data-class="expand"><i class="fa fa-fw fa-car txt-color-blue hidden-md hidden-sm hidden-xs"></i> ODOMeter</th>
                                            <th data-class="expand"><i class="fa fa-fw fa-car txt-color-blue hidden-md hidden-sm hidden-xs"></i> Service Due km</th>
                                            @*<th data-class="expand"><i class="fa fa-fw fa-crosshairs txt-color-blue hidden-md hidden-sm hidden-xs"></i> </th>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.ActionLink(@Html.DisplayFor(modelItem => item.RegistrationNo).ToString(), "Details", new { id = item.VehicleID }, new { @class = "" })

                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RegoExpiryDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Make)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Model)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.LastODOMeterReading)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EngineServiceDueKM)
                                                </td>
                                                @*<td>
                                                    @Html.ActionLink("  Del.", "Delete", new { id = item.VehicleID }, new { @class = "btn btn-primary btn-xs fa fa-times" })|
                                                    @Html.ActionLink("  Iss.", "Index", "VehiclesIssues", new { id = item.VehicleID }, new { @class = "btn btn-primary btn-xs fa fa-edit" })
                                                </td>*@
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                            <!-- end widget content -->

                        </div>
                        <!-- end widget div -->

                    </div>
                    <!-- end widget -->
                    <!-- Table END-->

                </article>
            </div>
        </section>

    </div>

    <!-- END MAIN CONTENT -->
